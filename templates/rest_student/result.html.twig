{% extends 'base.html.twig' %}

{% block title %}Hello RestTeacherController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <ul>
            {% for student in students %}
                <li>
                    <div>
                        <p>Student firstName : {{ student.firstName }}</p>
                        <p>Student lastName : {{ student.lastName }}</p>
                        <p>Student email : {{ student.email }}</p>
                        <p>Student address : street {{ student.address.street }} postCode {{ student.address.postalCode  }} city {{ student.address.city }} {{ student.address.country }}</p>
                    </div>
                </li>
            {% endfor %}
        </ul>
        <ul>
            <li>Your controller at <code><a href="{{ '/var/www/php-doctrine/src/Controller/RestTeacherController.php'|file_link(0) }}">src/Controller/RestTeacherController.php</a></code></li>
            <li>Your template at <code><a href="{{ '/var/www/php-doctrine/templates/rest_teacher/student.html.twig'|file_link(0) }}">templates/rest_teacher/index.html.twig</a></code></li>
        </ul>
    </div>
{% endblock %}